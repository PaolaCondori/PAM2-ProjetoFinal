<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UsuarioApp.Views.Usuarios.EdicaoUsuarioView"
             Title="EdicaoUsuarioView">
    <ScrollView>
        <VerticalStackLayout  Spacing="3" Padding="15">
            <Label Text="RM" FontSize="Medium" />
            <Entry 
                Placeholder="Digite seu RM de usuário" 
                Text ="{Binding Rm}"  
                Margin="0,10,0,0" VerticalOptions="FillAndExpand" 
                HorizontalOptions="FillAndExpand"
                IsEnabled="False">
            </Entry>

            <Label Text="Nome" FontSize="Medium" />
            <Entry 
            Placeholder="Digite seu nome de usuário" 
            Text ="{Binding Nome}"  
            Margin="0,10,0,0" VerticalOptions="FillAndExpand" 
            HorizontalOptions="FillAndExpand">
            </Entry>

            <Label Text="Email" FontSize="Medium" />
            <Entry 
            Placeholder="Digite seu email de usuário" 
            Text ="{Binding Email}"  
            Margin="0,10,0,0" VerticalOptions="FillAndExpand" 
            HorizontalOptions="FillAndExpand">
            </Entry>

            <Label Text="Telefone" FontSize="Medium" />
            <Entry 
            Placeholder="Digite seu telefone de usuário" 
            Text ="{Binding Telefone}"  
            Margin="0,10,0,0" VerticalOptions="FillAndExpand" 
            HorizontalOptions="FillAndExpand">
            </Entry>

            <Label Text="Tipo Perfil" FontSize="Medium" />
            <Entry 
            Placeholder="Digite seu tipo perfil de usuário" 
            Text ="{Binding TipoPerfil}"  
            Margin="0,10,0,0" VerticalOptions="FillAndExpand" 
            HorizontalOptions="FillAndExpand">
            </Entry>

            <Label Text="Senha" FontSize="Medium" />
            <Entry 
            Placeholder="Digite sua senha de usuário" 
            Text ="{Binding Senha}"  
            Margin="0,10,0,0" VerticalOptions="FillAndExpand" 
            HorizontalOptions="FillAndExpand">
            </Entry>

            <Label Text="Chamados Abertos" FontSize="Medium" />
            <Entry 
            Placeholder="Digite a quantidade de chamados abertos do usuário" 
            Text ="{Binding ChamadosAbertos}"  
            Margin="0,10,0,0" VerticalOptions="FillAndExpand" 
            HorizontalOptions="FillAndExpand">
            </Entry>

            <Label Text="Chamados Concluidos" FontSize="Medium" />
            <Entry 
            Placeholder="Digite a quantidade de chamados abertos do usuário" 
            Text ="{Binding ChamadosConcluidos}"  
            Margin="0,10,0,0" VerticalOptions="FillAndExpand" 
            HorizontalOptions="FillAndExpand">
            </Entry>

            <HorizontalStackLayout Spacing="20">
                <Button Text="Salvar" Command="{Binding SalvarCommand}"></Button>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>